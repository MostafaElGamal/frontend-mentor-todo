{
  "name": "todo-app-main",
  "version": "1.0.0",
  "description": "![Design preview for the Todo app coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "watch:scss": "node-sass -w ./assets/scss/main.scss ./assets/css/style.css --output-style compressed",
    "build:scss": "node-sass ./assets/scss/main.scss ./assets/css/style.css --output-style compressed",
    "watch:js": "tsc --watch",
    "build:js": "tsc --build",
    "live-serve": "live-server",
    "build": "npm run build:scss && npm run build:js",
    "dev": "npm-run-all --parallel watch:scss watch:js live-serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MostafaElGamal/frontend-mentor-todo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MostafaElGamal/frontend-mentor-todo/issues"
  },
  "homepage": "https://github.com/MostafaElGamal/frontend-mentor-todo#readme",
  "dependencies": {
    "live-server": "^1.2.1",
    "node-sass": "^7.0.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
